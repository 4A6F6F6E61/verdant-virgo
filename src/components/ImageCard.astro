---
export interface Props {
    url: string
}

const { url } = Astro.props
const img = url.split('/').findLast((x) => x)
---

<a class="relative grid h-[16rem] w-[14rem] md:w-[18rem] flex-col items-end justify-center overflow-hidden rounded-xl bg-white bg-clip-border text-center text-gray-700 m-4" href={`?p=${img}`}>
    <div class={`absolute inset-0 m-0 h-full w-full overflow-hidden rounded-none bg-transparent bg-cover bg-clip-border bg-center text-gray-700 shadow-none`} style={{backgroundImage: `url(${url})`}}>
        <div class="to-bg-black-10 absolute inset-0 h-full w-full bg-gradient-to-t from-black/80 via-black/50"></div>
    </div>
    <div class="relative p-6 py-10 px-6 md:px-12">
        <h2 class="mb-6 block font-sans text-4xl font-medium leading-[1.5] tracking-normal text-white antialiased">
            <!-- maybe add something later -->
        </h2>
    </div>
</a>