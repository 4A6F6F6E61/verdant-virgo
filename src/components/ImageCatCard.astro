---
export interface Props {
	cat: string
    preview: string
}

const { cat, preview } = Astro.props
---

<a class="relative grid h-[16rem] w-[20rem] flex-col items-end justify-center overflow-hidden rounded-xl bg-white bg-clip-border text-center text-gray-700 m-4" href={`./p/${cat.toLowerCase()}`}>
    <div class={`absolute inset-0 m-0 h-full w-full overflow-hidden rounded-none bg-transparent bg-cover bg-clip-border bg-center text-gray-700 shadow-none`} style={{backgroundImage: `url(/Pictures/${cat}/${preview})`}}>
        <div class="to-bg-black-10 absolute inset-0 h-full w-full bg-gradient-to-t from-black/80 via-black/50"></div>
    </div>
    <div class="relative p-6 py-10 px-6 md:px-12">
        <h2 class="mb-6 block font-sans text-4xl font-medium leading-[1.5] tracking-normal text-white antialiased">
            {cat}
        </h2>
    </div>
</a>